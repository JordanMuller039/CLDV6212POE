@{
    ViewBag.Title = "Blob Storage";
}

<h2>Blob Storage - View and Add Blobs</h2>

<!-- Display blobs -->
<div id="blob-list">
    <h3>Blobs in Container</h3>
    <ul id="blob-container">
        <!-- Blob list will be populated here -->
    </ul>
</div>

<!-- Form to add a new blob -->
<div>
    <h3>Add a New Blob</h3>
    <form id="blobForm">
        <input type="file" id="blobFile" required />
        <button type="submit">Upload Blob</button>
    </form>
</div>

<!-- JavaScript -->
<script>
    $(document).ready(function() {
        // Fetch and display the blobs
        fetchBlobs();

        // Handle form submission to upload a new blob
        $('#blobForm').on('submit', function(event) {
            event.preventDefault();
            var file = document.getElementById('blobFile').files[0];
            var formData = new FormData();
            formData.append('blobFile', file);

            $.ajax({
                url: '/Blob/UploadBlob',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    alert('Blob uploaded successfully');
                    fetchBlobs();
                },
                error: function() {
                    alert('Error uploading blob');
                }
            });
        });

        function fetchBlobs() {
            $.ajax({
                url: '/Blob/GetBlobs',
                type: 'GET',
                success: function(blobs) {
                    $('#blob-container').empty();
                    blobs.forEach(blob => {
                        $('#blob-container').append('<li>' + blob + '</li>');
                    });
                },
                error: function() {
                    alert('Error fetching blobs');
                }
            });
        }
    });
</script>
